<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.111"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.schauderhaft.blocking.BlockSimulatorController">
    <children>
        <GridPane hgap="5.0" prefHeight="400.0" prefWidth="600.0" vgap="5.0" AnchorPane.bottomAnchor="0.0"
                  AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" maxWidth="503.0" minWidth="10.0" prefWidth="364.0"/>
                <ColumnConstraints hgrow="ALWAYS" maxWidth="418.0" minWidth="10.0" prefWidth="231.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="-Infinity" prefHeight="450.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS"/>
            </rowConstraints>
            <children>
                <LineChart fx:id="chart" prefHeight="93.0" prefWidth="200.0" GridPane.rowSpan="2">
                    <xAxis>
                        <NumberAxis side="BOTTOM"/>
                    </xAxis>
                    <yAxis>
                        <NumberAxis side="LEFT"/>
                    </yAxis>
                </LineChart>
                <GridPane GridPane.columnIndex="1">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints/>
                    </rowConstraints>
                    <children>

                        <Label alignment="BOTTOM_RIGHT" contentDisplay="RIGHT" text="Duration/[s]:"
                               GridPane.halignment="RIGHT"/>
                        <TextField fx:id="duration" GridPane.columnIndex="1" />

                        <Label alignment="BOTTOM_RIGHT" contentDisplay="RIGHT" text="percentage DB Requests:"
                               GridPane.halignment="RIGHT" GridPane.rowIndex="1"/>
                        <TextField fx:id="percentageDbRequests" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label alignment="BOTTOM_RIGHT" contentDisplay="RIGHT" text="# Main Threads:"
                               GridPane.halignment="RIGHT" GridPane.rowIndex="2"/>
                        <TextField fx:id="numberOfMainThreads" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                        <Label alignment="BOTTOM_RIGHT" contentDisplay="RIGHT" text="# DB Threads:"
                               GridPane.halignment="RIGHT" GridPane.rowIndex="3"/>
                        <TextField fx:id="numberOfDbThreads" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                        <FlowPane nodeOrientation="RIGHT_TO_LEFT" prefHeight="200.0" prefWidth="200.0"
                                  GridPane.columnSpan="2" GridPane.rowIndex="5">


                            <children>
                                <Button mnemonicParsing="false" onAction="#handleStartButtonAction" text="Start">
                                    <FlowPane.margin>
                                        <Insets top="2.0"/>
                                    </FlowPane.margin>
                                </Button>
                                <Button mnemonicParsing="false" onAction="#handleStopButtonAction" text="Stop">
                                    <FlowPane.margin>
                                        <Insets top="2.0"/>
                                    </FlowPane.margin>
                                </Button>
                            </children>
                        </FlowPane>
                    </children>
                </GridPane>
            </children>
        </GridPane>
    </children>
</AnchorPane>
